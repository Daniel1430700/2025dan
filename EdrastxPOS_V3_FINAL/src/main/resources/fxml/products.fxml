<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="com.edrastx.pos.controller.ProductsController">
    <center>
        <TableView fx:id="tblProducts">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colCode" text="Código" prefWidth="100"/>
                <TableColumn fx:id="colName" text="Nombre" prefWidth="200"/>
                <TableColumn fx:id="colPrice" text="Precio" prefWidth="100"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
            </columns>
        </TableView>
    </center>
    <right>
        <VBox spacing="6" prefWidth="260">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Gestión de productos"/>
            <TextField fx:id="txtCode" promptText="Código"/>
            <TextField fx:id="txtName" promptText="Nombre"/>
            <TextField fx:id="txtPrice" promptText="Precio"/>
            <TextField fx:id="txtStock" promptText="Stock"/>
            <Button fx:id="btnNew" text="Nuevo" onAction="#onNew" maxWidth="Infinity"/>
            <Button fx:id="btnSave" text="Guardar" onAction="#onSave" maxWidth="Infinity"/>
            <Button fx:id="btnDelete" text="Eliminar" onAction="#onDelete" maxWidth="Infinity"/>
        </VBox>
    </right>
</BorderPane>
