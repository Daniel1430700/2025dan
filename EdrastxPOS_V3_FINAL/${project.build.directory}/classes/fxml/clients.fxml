<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="com.edrastx.pos.controller.ClientsController">
    <center>
        <TableView fx:id="tblClients">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Nombre" prefWidth="160"/>
                <TableColumn fx:id="colDocument" text="Documento" prefWidth="140"/>
                <TableColumn fx:id="colPhone" text="Teléfono" prefWidth="120"/>
            </columns>
        </TableView>
    </center>
    <right>
        <VBox spacing="6" prefWidth="260">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Gestión de clientes"/>
            <TextField fx:id="txtName" promptText="Nombre"/>
            <TextField fx:id="txtDocument" promptText="Documento"/>
            <TextField fx:id="txtPhone" promptText="Teléfono"/>
            <Button fx:id="btnNew" text="Nuevo" onAction="#onNew" maxWidth="Infinity"/>
            <Button fx:id="btnSave" text="Guardar" onAction="#onSave" maxWidth="Infinity"/>
            <Button fx:id="btnDelete" text="Eliminar" onAction="#onDelete" maxWidth="Infinity"/>
        </VBox>
    </right>
</BorderPane>
